# Kubernetes用Claude Automation イメージ
FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    git \
    bash \
    curl \
    wget \
    openssh-client \
    ca-certificates

# Create non-root user
RUN adduser -D -s /bin/bash claude

# Install Claude CLI globally as root
RUN npm install -g @anthropic-ai/claude-code

# Copy binary from Go build
COPY --from=golang:1.24-alpine /usr/local/go/bin/go /usr/local/bin/
ENV PATH="/usr/local/bin:${PATH}"

# Create directories
RUN mkdir -p /app/bin \
             /app/auth \
             /app/workspaces \
             /app/sessions \
             /workspace

# Copy Go binaries (will be built separately)
COPY bin/ /app/bin/

# Set permissions
RUN chown -R claude:claude /app /workspace

# Switch to non-root user
USER claude
WORKDIR /workspace

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Default command
CMD ["/app/bin/monitor"]