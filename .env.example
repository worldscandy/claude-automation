# Claude Authentication Configuration
# Copy this file to .env and fill in your actual values

# OAuth Access Token from ~/.claude/.credentials.json
CLAUDE_ACCESS_TOKEN=your_access_token_here

# Token expiration timestamp (Unix milliseconds)
CLAUDE_TOKEN_EXPIRES_AT=1748095442816

# User information from ~/.claude.json
CLAUDE_USER_ID=your_user_id_here
CLAUDE_ACCOUNT_UUID=your_account_uuid_here
CLAUDE_EMAIL=your_email@example.com
CLAUDE_ORG_UUID=your_org_uuid_here
CLAUDE_ORG_NAME="Your Organization Name"
CLAUDE_ORG_ROLE=admin
CLAUDE_MAX_TIER=5x

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=worldscandy
GITHUB_REPO=claude-automation

# Optional: LINE Integration
# LINE_CHANNEL_ACCESS_TOKEN=your_line_token_here
# LINE_CHANNEL_SECRET=your_line_secret_here